                  </div>
                  <input type="text" class="form-control float-right" id="fromTo" />
                  <!-- <div class="input-group-append">
                    <button class="btn btn-outline-primary"  onclick="fromToFunc()" type="button" id="button-addon2"><i class="fas fa-search"></i></button>
                  </div> -->
