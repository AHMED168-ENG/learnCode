<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/heade.ejs') %>
  </head>
  <body class="sidebar-mini layout-fixed text-sm text-sm">
    <div class="wrapper">
      <%- include('../layout/nav.ejs') %>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2 align-items-center mt-1">
              <div class="col-sm-6"></div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item"><a href="/dashboard/user">User</a></li>
                  <li class="breadcrumb-item active">Edit</li>
                </ol>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <!-- left column -->
              <div class="col-md-12 d-flex align-items-center justify-content-center">
                <!-- Profile Image -->
                <div class="card card-primary card-outline col-md-4">
                  <div class="card-body box-profile">
                    <div class="text-center">
                      <img class="profile-user-img img-fluid img-circle" src="/p/img/avatar.png" alt="User profile picture" />
                    </div>

                    <h3 class="profile-username text-center"><%= data.fullName||"User name not found" %></h3>

                    <p class="text-muted text-center"><%= data.user_type %></p>

                    <ul class="list-group list-group-unbordered mb-3">
                      <li class="list-group-item">
                        <b>Created At</b>
                        <a class="float-right"><%= new Date(data.createdAt).toLocaleDateString("en-US") %></a>
                      </li>
                      <li class="list-group-item">
                        <b>Email</b>
                        <a class="float-right"><%= data.email || "empty" %></a>
                      </li>
                      <li class="list-group-item">
                        <b>Phone</b>
                        <a class="float-right"><%= data.phone || "empty"%></a>
                      </li>
                      <li class="list-group-item">
                        <b>Status</b>
                        <a class="float-right">
                          <% if(data.account_status=="active"){ %>
                          <span class="badge badge-success">Active</span>
                          <% } else{ %>
                          <span class="badge badge-danger">Unactive</span>
                          <% } %>
                        </a>
                      </li>
                      <li class="list-group-item">
                        <b>Delete</b>
                        <a class="float-right">
                          <% if(data.deleted=="no"){ %>
                          <span class="badge badge-success">No</span>
                          <% } else{ %>
                          <span class="badge badge-danger">Yes</span>
                          <% } %>
                        </a>
                      </li>
                    </ul>
                    <% if(data.deleted=="no"){ %>
                    <button href="#" class="btn btn-danger">Delete</button>
                    <% } else{ %>
                    <button href="#" class="btn btn-success">Restore</button>
                    <% } %> &nbsp;&nbsp;<% if(data.account_status=="active"){ %>
                    <button href="#" class="btn btn-warning">Unactive</button>
                    <% } else{ %>
                    <button href="#" class="btn btn-info">Active</button>
                    <% } %>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>
              <!-- /.card -->
              <!--/.col (left) -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- /.content -->
      </div>
      <footer class="main-footer"><%- include('../layout/footer.ejs') %></footer>
    </div>
    <%- include('../layout/script.ejs') %>
    <script src="/js/user/edit.js"></script>
  </body>
</html>
