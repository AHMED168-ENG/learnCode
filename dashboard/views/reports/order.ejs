            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.row -->
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
          <div class="row col-12 mb-2 align-items-center mt-1">
            <div class="col-6 d-flex">
              <button type="button" data-tooltip="Inprogress" onclick="changeType('all')" class="btn btn-secondary float-right mx-1">All</button>
