              </div>
            </div>
          </div>
          <div class="container-fluid">
            <div class="row mt-2">
              <div class="col-md-12">
                <!-- BAR CHART -->
                <div class="card card-success">
                  <div class="card-header">
                    <h3 class="card-title">Orders details</h3>
                    <div class="card-tools">
                      <button type="button" class="btn btn-tool" data-card-widget="collapse">
                        <i class="fas fa-minus"></i>
                      </button>
                      <button type="button" class="btn btn-tool" data-card-widget="remove">
                        <i class="fas fa-times"></i>
                      </button>
                    </div>
                  </div>
                  <div class="card-body">
                    <div class="chart">
                      <canvas id="orderDetails" style="min-height: 250px; height: 250px; max-height: 250px; max-width: 100%"></canvas>
                    </div>
                  </div>
                  <!-- /.card-body -->
                </div>
                <!-- /.card -->
              </div>

              <div class="card card-primary card-outline col-md-12">
                <div class="card-header">
                  <h3 class="card-title">
                    <i class="fas fa-dolly-flatbed"></i>
                    &nbsp;&nbsp; Orders
                  </h3>
                  <div class="card-tools">
                    <button type="button" class="btn btn-tool">
                      <i class="fas fa-file-excel"></i>
                    </button>
                  </div>
                </div>
                <div id="spinner-notfound">
                  <div class="w-100 d-flex justify-content-center align-items-center" style="min-height: 24em"></div>
                </div>
                <div id="tabe-items" class="card-body pad table-responsive">
                  <table class="table table-bordered" style="border: 1px solid #dee2e6">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Created Date</th>
                        <th scope="col">Customer Name</th>
                        <th scope="col">Pay Type</th>
                        <th scope="col">All Price</th>
                        <th scope="col">Promo</th>
                        <th scope="col">Total After Discount</th>
                      </tr>
                    </thead>
                    <tbody id="tr-th-row"></tbody>
                  </table>
                </div>
                <!-- /.card -->
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- /.content -->
      </div>
      <footer class="main-footer"><%- include('../layout/footer.ejs') %></footer>
    </div>
    <%- include('../layout/script.ejs') %>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
    <script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
    <script src="/js/plugins/chart.js/Chart.min.js"></script>
    <script>
      var currMonthName = moment().format("MMMM")
      var prevMonthName = moment().subtract(1, "month").format("MMMM")
      var monthsArr = ["January", "February", "March", "April", "May", "June", "July", "August", "September", "October", "November", "December"]
      var ordersInYear = JSON.parse(`<%-JSON.stringify(data.ordersInYear)%>`)
      console.log(ordersInYear)
      var monthsCountArr = monthsArr.map((m, i) => {
        for (let element of ordersInYear) {
          if (element.MONTH == m) {
            return element.count
          }
        }
        return 0
      })
      $(function () {
        var orderDetails = {
          labels: monthsArr,
          datasets: [
            {
              label: "Order per month",
              backgroundColor: "rgba(60,141,188,0.9)",
              borderColor: "rgba(60,141,188,0.8)",
              pointRadius: false,
              pointColor: "#3b8bba",
              pointStrokeColor: "rgba(60,141,188,1)",
              pointHighlightFill: "#fff",
              pointHighlightStroke: "rgba(60,141,188,1)",
              data: monthsCountArr,
            },
          ],
        }
        //-------------
        //- Order Details CHART -
        //-------------
        var orderDetailsChartCanvas = $("#orderDetails").get(0).getContext("2d")
        var orderDetailsData = $.extend(true, {}, orderDetails)
        var temp0 = orderDetails.datasets[0]
        orderDetailsData.datasets[0] = temp0

        var orderDetailsChartOptions = {
          responsive: true,
          maintainAspectRatio: false,
          datasetFill: false,
        }

        new Chart(orderDetailsChartCanvas, {
          type: "bar",
          data: orderDetailsData,
          options: orderDetailsChartOptions,
        })
      })
    </script>
    <script>
      var fromOrder = null
      var toOrder = null
      $(function () {
        $("#fromTo").daterangepicker(
          {
            locale: {
              format: "YYYY-MM-DD",
            },
            startDate: new Date(),
            endDate: new Date(),
            minDate: moment().format("L"),
            dateFormat: "YYYY-MM-DD",
            opens: "left",
          },
          function (start, end, label) {
            fromOrder = start.format("YYYY-MM-DD")
            toOrder = end.format("YYYY-MM-DD")
            getList(orderType, fromOrder, toOrder)
          }
        )
      })
    </script>
    <script src="/js/reports/order.js"></script>
  </body>
</html>
