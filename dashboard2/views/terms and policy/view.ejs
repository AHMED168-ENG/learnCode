<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/heade.ejs') %>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/he/1.2.0/he.min.js"
      integrity="sha512-PEsccDx9jqX6Dh4wZDCnWMaIO3gAaU0j46W//sSqQhUQxky6/eHZyeB3NrXD2xsyugAKd4KPiDANkcuoEa2JuA=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
  </head>

  <body class="sidebar-mini layout-fixed text-sm text-sm">
    <style>
      th,
      td {
        text-align: center;
        vertical-align: middle !important;
      }
    </style>
    <div class="wrapper">
      <%- include('../layout/nav.ejs') %>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2 align-items-center mt-1">
              <div class="col-sm-6">
                <h3><%=type%></h3>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item active"><%=type%></li>
                </ol>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-globe-americas"></i>
                &nbsp;&nbsp; <%=type%> EN
              </h3>
              <div class="card-tools">
                <% if (canEdit) { %>
                  <a type="button" href="/dashboard/management/<%=type%>/edit?lang=en" class="btn btn-tool">
                    <i class="fas fa-edit"></i>
                    Edit
                  </a>
                <% } %>
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body pad">
              <script type="text/javascript">
                document.write(`${he.decode("<%=data.termsEn%>")}`)
              </script>
            </div>
            <!-- /.card -->
          </div>
          <div class="card card-primary card-outline">
            <div class="card-header">
              <h3 class="card-title">
                <i class="fas fa-globe-americas"></i>
                &nbsp;&nbsp; <%=type%> AR
              </h3>
              <div class="card-tools">
                <% if (canEdit) { %>
                  <a type="button" href="/dashboard/management/<%=type%>/edit?lang=ar" class="btn btn-tool">
                    <i class="fas fa-edit"></i>
                    Edit
                  </a>
                <% } %>
                <button type="button" class="btn btn-tool" data-card-widget="collapse">
                  <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove">
                  <i class="fas fa-times"></i>
                </button>
              </div>
            </div>
            <div class="card-body pad">
              <script type="text/javascript">
                document.write(`${he.decode("<%=data.termsAr%>")}`)
              </script>
            </div>
            <!-- /.card -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>
      <footer class="main-footer"><%- include('../layout/footer.ejs') %></footer>
    </div>
    <%- include('../layout/script.ejs') %>
  </body>
</html>
