<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../layout/heade.ejs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.25.1/moment.min.js"></script>
  </head>
  <body class="sidebar-mini layout-fixed text-sm text-sm">
    <style>
      th,
      td {
        text-align: center;
        vertical-align: middle !important;
      }
    </style>
    <div class="wrapper">
      <%- include('../layout/nav.ejs') %>
      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2 align-items-center mt-1">
              <div class="col-sm-6">
                <h4>View Message</h4>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item active">Messages</li>
                  <li class="breadcrumb-item active">View</li>
                </ol>
              </div>
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->
        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                  <div class="callout callout-info">
                    <h5 class="m-0">
                      <i class="fas fa-hashtag"></i>
                      &emsp; <%= data.message_id%>
                      <small class="float-right">
                        <script type="text/javascript">
                          document.write(`From : ${moment("<%=data.createdAt%>").fromNow()}`)
                        </script>
                      </small>
                    </h5>
                  </div>
                  <div class="callout callout-secondary">
                    <h6 class="m-0">
                      <i class="fas fa-address-card"></i>  
                      <%= data.name%> &emsp; &emsp;
                      <i class="fas fa-envelope"></i>  
                      <%= data.email%>
                    </h6>
                  </div>
                  <div class="card">
                    <div class="card-header">
                      <h3 class="card-title">Message</h3>
                      <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" title="Collapse">
                          <i class="fas fa-minus"></i>
                        </button>
                        <button type="button" class="btn btn-tool" data-card-widget="remove" title="Remove">
                          <i class="fas fa-times"></i>
                        </button>
                      </div>
                    </div>
                    <div class="card-body">
                      <div class="row"><%=data.body%></div>
                    </div>
                    <!-- /.card-body -->
                    <div class="card-footer text-center">
                      <a href='mailto:<%=data.email%>'>Reply</a>
                    </div>
                    <!-- /.card-footer -->
                  </div>
                </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- /.content -->
      </div>
      <footer class="main-footer"><%- include('../layout/footer.ejs') %></footer>
    </div>
    <%- include('../layout/script.ejs') %>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.25.1/moment.min.js"></script>
    <script>
      $(document).ready(function () {
        changeStatus("<%= data.message_id%>")
      })
      function changeStatus(id) {
        const settings = {
          async: true,
          crossDomain: true,
          url: `/dashboard/message/status/${id}`,
          method: "PUT",
        }
        $.ajax(settings).always(function () {
          // window.location.reload()
        })
      }
    </script>
  </body>
</html>
